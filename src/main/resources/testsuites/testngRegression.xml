<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="RegressionTest" verbose="1" parallel="tests" thread-count="10">
    <test name="Cheap Computer" parallel="tests" thread-count="10">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="test.computer.BuildYourCheapComputer" />
        </classes>
    </test>

    <test name="Standard Computer" parallel="tests" thread-count="10">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="test.computer.BuildYourOwnComputer" />
            <class name="test.global.footer.TestFooterController"/>
        </classes>
    </test>

</suite>
